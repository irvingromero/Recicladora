<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UsuarioLogeado.SesionUsuario">

    <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapaUsuario"
            tools:context=".UsuarioLogeado.SesionUsuario"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/btnMenu_sesionUsuario"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/menu_icono"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabMejorPrecio_sesionUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnMenu_sesionUsuario"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/mejor_precio_icono"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/tvMejorPrecio_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fabMejorPrecio_sesionUsuario"
                android:textColor="@color/colorNegro"
                android:textSize="11sp"
                android:layout_marginLeft="1dp"/>
    </RelativeLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_sesionUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">
        </com.google.android.material.chip.ChipGroup>
    </FrameLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <include layout="@layout/datos_recicladora"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@android:color/white"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorNegro"
                    android:gravity="center_horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="7dp"
                        android:text="@string/hola_str"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"/>

                <TextView
                        android:id="@+id/tvUsuario_SesionUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="7dp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnModificarDatos_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/modificarDatos_str"
                    app:icon="@drawable/modificar_datos_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:onClick="modificarDatos_sesionUsuario"
                    app:rippleColor="@color/colorNegro"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuscarMaterial_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/buscarMaterial_str"
                    app:icon="@drawable/buscar_material_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"
                    android:onClick="buscarMaterial_sesionUsuario"/>
<!--
            <android.support.design.button.MaterialButton
                    android:id="@+id/btnMejorPrecio_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mejorPrecio_str"
                    app:icon="@drawable/mejor_precio_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"
                    android:onClick="mejorPrecio_sesionUsuario"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnCercana_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cercana_str"
                    app:icon="@drawable/ubicacion_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"
                    android:onClick="masCercana_sesionUsuario"/>
-->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCerrarSesion_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrarSesion_str"
                    app:icon="@drawable/salir_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"
                    android:onClick="cerrarSesion_sesionUsuario"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@color/colorNegro"/>
<!--
            <android.support.design.button.MaterialButton
                    android:id="@+id/btnGuiaReciclaje_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guiaReciclaje_str"
                    app:icon="@drawable/guia_reciclaje_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    app:rippleColor="@color/colorNegro"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnManualidades_sesionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manualidades_str"
                    app:icon="@drawable/manualidades_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"/>
-->
        </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>