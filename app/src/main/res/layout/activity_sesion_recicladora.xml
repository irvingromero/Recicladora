<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout_recicladora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Recicladora.SesionRecicladora">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/menu_icono"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcMateriales_sesionRecicladora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/btnMenu">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/white">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorNegro"
                    android:gravity="center_horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_str"
                        android:textColor="@android:color/white"/>

                <TextView
                        android:id="@+id/tvUsuario_SesionRecicladora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="usuario xd"/>
            </LinearLayout>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnMisDatos_sesionRecicladora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/misDatos_str"
                    app:icon="@drawable/modificar_datos_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnImagen_sesionRecicladora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/agregarImagen_str"
                    app:icon="@drawable/imagen_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    app:rippleColor="@color/colorNegro"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnUbicacion_sesionRecicladora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ubicacion_str"
                    app:icon="@drawable/ubicacion_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnHorario_sesionRecicladora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/horario_str"
                    app:icon="@drawable/reloj_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"/>

            <android.support.design.button.MaterialButton
                    android:id="@+id/btnSalir_sesionRecicladora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrarSesion_str"
                    app:icon="@drawable/salir_icono"
                    app:iconTint="@color/colorNegro"
                    app:cornerRadius="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    app:rippleColor="@color/colorNegro"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>